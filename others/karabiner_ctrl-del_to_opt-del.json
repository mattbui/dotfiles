{
  "title": "Map ctrl-del to opt-del",
  "rules": [
    {
      "description": "Map left_ctrl-del to left_opt-delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control"]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "delete_or_backspace",
              "modifiers": ["left_alt"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map right_ctrl-del to right_opt-delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["right_control"]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "delete_or_backspace",
              "modifiers": ["right_alt"]
            }
          ]
        }
      ]
    }
  ]
}
