{
  "title": "Matt's keyboard rules",
  "rules": [
    {
      "description": "Map ctrl-del to opt-delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": ["left_alt"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["right_control"],
              "optional": ["any"]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": ["right_alt"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map fn-hjkl to arrows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "h"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "j"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "k"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "l"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Map fn-ctrl to capslock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "left_control"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
