{
  "title": "Matt's keyboard rules",
  "rules": [
    {
      "description": "Map ctrl-del to opt-delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": ["left_alt"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["right_control"],
              "optional": ["any"]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": ["right_alt"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map fn-hjkl to arrows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "h"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "j"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "k"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "l"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Map fn-tab to capslock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "tab"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    },
    {
      "description": "Map ctrl-cmd-n to create new space/desktop",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control", "left_command"],
              "optional": ["any"]
            },
            "key_code": "n"
          },
          "to": [
            {
              "shell_command": "/usr/bin/osascript ~/bin/newspace"
            }
          ]
        }
      ]
    },
    {
      "description": "Map fn-esc to ` and fn-num rows to functions",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "escape"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "grave_accent_and_tilde"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "1"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "display_brightness_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "2"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "display_brightness_increment"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "7"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "rewind"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "8"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "play_or_pause"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "9"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "fastforward"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "0"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "mute"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "hyphen"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "volume_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["fn"],
              "optional": ["any"]
            },
            "key_code": "equal_sign"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "volume_increment"
            }
          ]
        }
      ]
    }
  ]
}
