set shell zsh
set icons
set drawbox true
set period 1
set scrolloff 5
set info size:time
# set hidden true
set previewer ~/.config/lf/preview.sh
set preview true

map <c-q> quit
map <esc> quit
map ~ cd ~
map <enter> open
map D delete
map . set hidden!
map J :toggle; down
map K :toggle; up

cmd osOpen &open "$f"
map o osOpen

cmd quickLook &qlmanage -p "$f"
map = quickLook

cmd extract %atool -x "$f"
map x extract

cmd trash ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	space=$' '
	tok_space=$'<SPACE>'

	printf "%s\n\t" "$fx"
	printf "Move to trash?[y/N] "
	read ans
	[ $ans = "y" ] && for file in $(echo $fx | sed s/$space/$tok_space/g | tr '\n' ' ')
	do
		trash "$(echo $file | sed s/$tok_space/$space/g )"
	done
}}
map T trash

cmd addDir %{{
	printf "Directory name or path? "
	read ans
	mkdir -p $ans
}}
map A addDir

cmd addFile %{{
	printf "Filename? "
	read ans
	touch $ans
}}
map a addFile

# if currently in nvim (open via floaterm) -> use floaterm to open
cmd openWithEditor ${{
	[ -z $VIMRUNTIME ] && $EDITOR $f || floaterm $f
}}

map e openWithEditor
